<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="#FDF8FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-9dp"
                app:srcCompat="@drawable/topbarlogo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="11dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/backbutton" />

            <ImageButton
                android:id="@+id/noticeButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="260dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/noticebutton" />

        </LinearLayout>

        <Button
            android:id="@+id/category1"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="#705b7c"
            android:text="ファッション・アクセサリー"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/category2"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:layout_marginTop="150dp"
            android:backgroundTint="#705b7c"
            android:text="家電・ガジェット"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/category3"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="#705b7c"
            android:text="コスメ・美容・健康"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/category4"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:layout_marginTop="250dp"
            android:backgroundTint="#705b7c"
            android:text="ホビー・エンタメ"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/category5"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:layout_marginTop="300dp"
            android:backgroundTint="#705b7c"
            android:text="本・学習用品"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/category6"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:layout_marginTop="350dp"
            android:backgroundTint="#705b7c"
            android:text="家具・生活雑貨"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/category7"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:layout_marginTop="400dp"
            android:backgroundTint="#705b7c"
            android:text="スポーツ・アウトドア用品"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/category8"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:layout_marginTop="450dp"
            android:backgroundTint="#705b7c"
            android:text="学生・就活・アルバイト関連"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/category9"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="#705b7c"
            android:text="楽器用機材"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>